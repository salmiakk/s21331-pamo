<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.quiz.QuizFragment"
    android:id="@+id/layout_quiz"
    android:columnCount="3"
    android:useDefaultMargins="true">
    <TextView
        android:id="@+id/text_quiz_question_intro"
        android:layout_width="119dp"
        android:layout_height="32dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Question:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_quiz_question"
        android:layout_width="379dp"
        android:layout_height="138dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Do you eat pizza on a diet?"
        android:textAlignment="center"
        android:textSize="20sp" />
    <CheckBox
        android:id="@+id/text_quiz_answer1_checkbox"
        android:layout_width="366dp"
        android:layout_height="45dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Surely"
        android:textAlignment="center"
        android:textSize="20sp" />
    <CheckBox
        android:id="@+id/text_quiz_answer2_checkbox"
        android:layout_width="366dp"
        android:layout_height="50dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="eat some greens instead"
        android:textAlignment="center"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/text_quiz_answer3_checkbox"
        android:layout_width="366dp"
        android:layout_height="50dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="it is not allowed"
        android:textAlignment="center"
        android:textSize="20sp" />

</GridLayout>