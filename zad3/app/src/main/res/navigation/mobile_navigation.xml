<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_quiz">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.pjatk.myapplication.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.pjatk.myapplication.ui.bmi.BmiFragment"
        android:label="@string/title_bmi"
        tools:layout="@layout/fragment_bmi" />

    <fragment
        android:id="@+id/navigation_whattoeat"
        android:name="com.pjatk.myapplication.ui.whattoeat.WhatToEatFragment"
        android:label="@string/title_whattoeat"
        tools:layout="@layout/fragment_whattoeat" />
    <fragment
        android:id="@+id/navigation_recipes"
        android:name="com.pjatk.myapplication.ui.recipes.RecipesFragment"
        android:label="@string/title_recipes"
        tools:layout="@layout/fragment_whattoeat" />
    <fragment
        android:id="@+id/navigation_quiz"
        android:name="com.pjatk.myapplication.ui.quiz.QuizFragment"
        android:label="@string/title_quiz"
